@model IEnumerable<IdeaWeb.Models.Idea>

@{
    ViewData["Title"] = "Home";
}

<h2><span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span> Ideas</h2>
<ul class="idea">
  @foreach (var item in Model)
  {
    <li>
      <a asp-action="Details" asp-controller="Ideas" asp-route-id="@item.Id">
        <span class="rating btn btn-default btn-sm">@item.Rating</span>
        <span class="name">@item.Name</span>
      </a>
        <a asp-action="Edit" asp-controller="Ideas" asp-route-id="@item.Id" title="Edit" class="btn btn-default btn-sm text-right">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>
        <a asp-action="Delete" asp-controller="Ideas" asp-route-id="@item.Id" title="Delete" class="btn btn-default btn-sm text-right">
          <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
        </a>
    </li>
  }
</ul>
